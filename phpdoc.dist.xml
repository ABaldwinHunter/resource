<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>apparat-resource</title>
    <parser>
        <target>apidocs/output</target>
        <extensions>
            <extension>php</extension>
        </extensions>
    </parser>
    <transformer>
        <target>apidocs/docs</target>
    </transformer>
    <files>
        <directory>src</directory>
        <ignore>Test/*</ignore>
    </files>
    <transformations>
        <template name="responsive-twig"/>
    </transformations>
</phpdoc>